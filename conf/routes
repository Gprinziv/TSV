# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()

# Bill page
GET     /bill/:id                   controllers.Bill.show(id: String)

# Hearing page
GET		/hearing/:id				controllers.Hearing.show(id: String)

# Person page
GET		/person/:id					controllers.Person.show(id: Integer)

# Search page
GET		/search/:query				controllers.Search.search(query: String)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
